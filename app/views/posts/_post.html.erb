<div class="panel panel-default">
  <div class="panel-heading">
    <%= gravatar_tag post.user.email, size: 20 %><%= post.user.username %> about <%= time_ago_in_words(post.created_at) %> ago
    <% if current_user && current_user == post.user %>
        <%= link_to 'edit', edit_post_path(post) %> | <%= link_to 'delete', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %>
    <% end %>
  </div>
  <div class="panel-body">
    <%= raw(post.content_html) %>
  </div>
</div>