<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-vertical"}) do |f| %>
          <%= f.error_notification %>

          <div class="form-group">
            <%= f.input :username, required: true, autofocus: true, label: false, placeholder: "Username", input_html: {class: "form-control input-lg"} %>
            <br>
            <%= f.input :email, required: true, label: false, placeholder: "Email", input_html: {class: "form-control input-lg"} %>
            <br>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), label: false, placeholder: "Password", input_html: {class: "form-control  input-lg"} %>

            <%= f.input :password_confirmation, required: true, label: false, placeholder: "Password Confirmation", input_html: {class: "form-control input-lg"} %>
          </div>

          <div class="form-group">
            <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block btn-lg" %>
          </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
    <div class="col-md-3"></div>
  </div>
</div>