<div class="col-sm-4 col-md-4 col-lg-4">
  <div class="thumbnail">
    <%= link_to user_path(user.username) do %>
        <%= gravatar_tag user.email, size: 200 %>
    <% end %>
    <div class="caption">
      <h3><%= user.username %></h3>
      <p>
        <%= action_buttons(user) %>
      </p>
    </div>
  </div>
</div>